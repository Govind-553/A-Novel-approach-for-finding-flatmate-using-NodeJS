<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <title>Pricing Card</title>
    <link rel="icon" href="/img/crown.png" type="image/x-icon">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Rubik&display=swap');
        * {
            box-sizing: border-box;
            padding: 0;
            margin: 0;
        }

        body {
            font-family: 'Lato', sans-serif;
            font-size: 0.938rem;
            background-color: hsl(250, 100%, 99%);
            color: hsl(250, 12%, 35%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 2rem 1rem;
        }

        ul {
            list-style: none;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        /* reusable css classes */
        .container {
            max-width: 1100px;
            margin: 0 auto;
        }

        .grid {
            display: grid;
        }

        /* Card Pricing */
        .card {
            padding: 3rem 0;
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }

        .card_container {
            display: flex;
            flex-direction: column;
            gap: 3rem 1.25rem;
            width: 100%;
            align-items: center;
            justify-content: center;
        }

        .card_content {
            position: relative;
            background-color: #fff;
            padding: 2rem 1.5rem 2.5rem;
            border-radius: 1.75rem;
            box-shadow: 0 12px 24px hsla(250, 61%, 16%, .1);
            transition: .4s;
            max-width: 350px;
            width: 100%;
        }

        .card_content:hover {
            box-shadow: 0 16px 24px hsla(250, 61%, 16%, .15);
        }

        .card_header-img {
            width: 30px;
            height: 30px;
        }

        .card_header-circle {
            width: 40px;
            height: 40px;
            background-color: hsl(250, 14%, 96%);
            border-radius: 50%;
            margin-bottom: 1rem;
            display: grid;
            place-items: center;
        }

        .card_header-subtitle {
            display: block;
            font-size: 0.813rem;
            color: hsl(250, 12%, 65%);
            text-transform: uppercase;
            margin-bottom: 0.25rem;
        }

        .card_header-title {
            font-size: 1.75rem;
            color: hsl(250, 12%, 15%);
            margin-bottom: 1rem;
        }

        .card_pricing {
            position: absolute;
            background: linear-gradient(157deg, hsl(250, 96%, 69%) -12%, hsl(250, 96%, 54%) 109%);
            width: 60px;
            height: 88px;
            right: 1.5rem;
            top: -1rem;
            padding-top: 1.25rem;
            text-align: center;
        }

        .card_pricing-number {
            font-family: 'Rubik', sans-serif;
            font-size: 1.25rem;
        }

        .card_pricing-symbol {
            font-size: 0.813rem;
        }

        .card_pricing-month {
            display: block;
            font-size: 0.625rem;
        }

        .card_pricing-month,
        .card_pricing-number {
            color: #fff;
        }

        .card_pricing::after,
        .card_pricing::before {
            content: '';
            position: absolute;
        }

        .card_pricing::after {
            width: 100%;
            height: 14px;
            background-color: #fff;
            left: 0;
            bottom: 0;
            clip-path: polygon(0 100%, 50% 0, 100% 100%);
        }

        .card_pricing::before {
            width: 14px;
            height: 16px;
            background-color: hsl(250, 96%, 37%);
            top: 0;
            left: -14px;
            clip-path: polygon(0 100%, 100% 0, 100% 100%);
        }

        .card_list {
            row-gap: .5rem;
            margin-bottom: 2rem;
        }

        .card_list-item {
            display: flex;
            align-items: center;
        }

        .card_list-icon {
            font-size: 1.5rem;
            color: hsl(250, 96%, 54%);
            margin-right: 0.5rem;
        }

        .button {
            width: 100%;
            height: 60px;
            padding: 1.25rem;
            border: none;
            font-size: 0.938rem;
            border-radius: .8rem;
            background: linear-gradient(157deg, hsl(250, 96%, 69%) -12%, hsl(250, 96%, 54%) 109%);
            color: white;
            cursor: pointer;
            transition: .4s;
        }

        .button:hover {
            box-shadow: 0 12px 24px hsla(250, 97%, 54%, .2);
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #fefefe;
            padding: 20px;
            border: 1px solid #888;
            border-radius: 10px;
            width: 80%;
            max-width: 300px;
            text-align: center;
            position: relative;
        }

        .close-button {
            position: absolute;
            top: 10px;
            right: 20px;
            font-size: 24px;
            font-weight: bold;
            cursor: pointer;
        }

        /* MEDIA QUERIES */
        @media screen and (min-width: 568px) {
            .card_container {
                flex-direction: row;
                flex-wrap: wrap;
                justify-content: center;
                align-items: stretch;
            }

            .card_content {
                flex: 1 1 45%;
                margin: 0 0.5rem;
            }
        }

        @media screen and (min-width: 968px) {
            .card_container {
                flex-wrap: nowrap;
                justify-content: space-between;
                align-items: stretch;
            }

            .card_content {
                flex: 1 1 30%;
                margin: 0;
            }
        }
    </style>
</head>
<body>
    <section class="card container">
        <div class="card_container">
            <article class="card_content">
                <div class="card_pricing">
                    <div class="card_pricing-number">
                        <span class="card_pricing-symbol">â‚¹</span>299
                    </div>
                    <span class="card_pricing-month">/month</span>
                </div>
                <header class="card_header">
                    <div class="card_header-circle grid">
                        <img src="/img/rupee.png" alt="" class="card_header-img">
                    </div>
                    <span class="card_header-subtitle">Subscribe to register</span>
                    <h3 class="card_header-title">Regular Plan</h3>
                </header>

                <ul class="card_list grid">
                    <li class="card_list-item">
                        <i class="uil uil-check card_list-icon"></i>
                        <p class="card_list-description">Access to Student profiles</p>
                    </li>
                    <li class="card_list-item">
                        <i class="uil uil-check card_list-icon"></i>
                        <p class="card_list-description">Search & Filter options available</p>
                    </li>
                    <li class="card_list-item">
                        <i class="uil uil-check card_list-icon"></i>
                        <p class="card_list-description">Editable profiles</p>
                    </li>
                </ul>

                <button type="button" onclick="initiatePayment()" class="button">Choose this Plan</button>
                <input type="hidden" id="sessionFileName" value="<%= sessionFileName || '' %>">
            </article>
        </div>
    </section>

    <!-- Modal for Success Message -->
    <div id="successModal" class="modal">
        <div class="modal-content">
            <span class="close-button" onclick="closeModal()">&times;</span>
            <h2>Success!</h2>
            <p>You have successfully selected this plan.</p>
        </div>
    </div>

    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
        function showModal() {
            const modal = document.getElementById('successModal');
            modal.style.display = 'flex';
        }

        function closeModal() {
            const modal = document.getElementById('successModal');
            modal.style.display = 'none';
        }

        async function initiatePayment() {
            try {
                const sessionFileName = document.getElementById('sessionFileName').value;

                if (!sessionFileName) {
                    alert('Session data is missing. Please try again.');
                    return;
                }

                const response = await fetch('/create-checkout-session', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ sessionFileName })
                });

                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error(`Server Error: ${errorText}`);
                }
                const data = await response.json();
                const options = {
                    key: data.key,
                    amount: data.amount,
                    currency: data.currency,
                    order_id: data.orderId,
                    name: "Flatmate Platform",
                    description: "Regular Plan Subscription",
                    handler: function(response) {
                        console.log("Payment Success Response:", response);
                        window.location.href = `/complete?payment_id=${response.razorpay_payment_id}&order_id=${response.razorpay_order_id}`;
                    },
                    prefill: {
                        name: "Govind Choudhari",
                        email: "govind03@example.com",
                        contact: "9136701234"
                    },
                    theme: { color: "#3399cc" }
                };
                const rzp = new Razorpay(options);
                rzp.open();
            } catch (error) {
                console.error('Payment Error:', error);
                alert(error.message);
            }
        }
    </script>
</body>
</html>
